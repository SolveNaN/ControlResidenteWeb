@page "/datosresidentes"
<PageTitle>Datos</PageTitle>
<Encabezado />
<h1>@Titulo</h1>
<br/>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Cedula</th>
            <th scope="col">Telefono</th>
            <th scope="col">Torre</th>
            <th scope="col">Apartamento</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var residente in Residentes)
        {
            <tr>
                <th scope="row">@residente.Id</th>
                <td>@residente.Nombre</td>
                <td>@residente.Apellido</td>
                <td>@residente.Telefono</td>
                <td>@residente.Cedula</td>
                <td>@residente.Torre</td>
                <td>@residente.Apartamento</td>
                <td>
                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" @onclick="()=>EditarResidente(residente.Nombre)"><i class="bi bi-pen-fill"></i></button>
                </td>
                <td>
                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal" @onclick="()=>EliminarResidente(residente.Nombre)"><i class="bi bi-person-x"></i></button>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@TituloDelModal</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3> @NombreParaEditar</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Guadar datos</button>
            </div>
        </div>
    </div>
</div>

